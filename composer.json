{
    "name": "bgeneto/ci4-sanitize",
    "description": "Data sanitization package for Codeigniter 4 framework",
    "keywords":
    [
        "codeigniter", "codeigniter4", "sanitization", "model", "view", "controller", "html", "php"
    ],
    "homepage": "https://github.com/bgeneto/ci4-sanitize",
    "authors": [
        {
            "name": "Bernhard Enders",
            "email": "bgeneto@gmail.com",
            "homepage": "https://github.com/bgeneto",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "codeigniter4/devkit": "*",
        "codeigniter4/framework": "^4.1",
        "codeigniter/coding-standard": "^1.8",
        "friendsofphp/php-cs-fixer": "^3.68",
        "nexusphp/cs-config": "^3.25"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Bgeneto\\Sanitize\\": "src"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": [
            "phpstan analyze"
        ],
        "ci": [
            "Composer\\Config::disableProcessTimeout",
            "@deduplicate",
            "@analyze",
            "rector process",
            "@style"
        ],
        "ci-full": [
            "Composer\\Config::disableProcessTimeout",
            "@deduplicate",
            "@analyze",
            "@test",
            "@inspect",
            "rector process",
            "@style"
        ],
        "cs": [
            "Composer\\Config::disableProcessTimeout",
            "php-cs-fixer fix --ansi --verbose --dry-run --diff"
        ],
        "cs-fix": [
            "Composer\\Config::disableProcessTimeout",
            "php-cs-fixer fix --ansi"
        ],
        "deduplicate": "phpcpd app/ src/",
        "inspect": "deptrac analyze --cache-file=build/deptrac.cache",
        "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
        "retool": "retool",
        "style": "@cs-fix",
        "test": "phpunit"
    }
}
